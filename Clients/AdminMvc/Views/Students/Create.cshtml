@model AdminMvc.ViewModels.StudentPostViewModel

<h1 class="page-title">Lägg till ny student här</h1>
<section class="form-container">
  <h4>Studentinformation</h4>
  <form class="form" asp-action="Create" method="post">
    <div class="form-control">
      <label asp-for="@Model!.FirstName"></label>
      <input asp-for="@Model!.FirstName" />
    </div>
    <div class="form-control">
      <label asp-for="@Model!.LastName"></label>
      <input asp-for="@Model!.LastName" />
    </div>
    <div class="form-control">
      <label asp-for="@Model!.Address"></label>
      <input asp-for="@Model!.Address" />
    </div>
    <div class="form-control">
      <label asp-for="@Model!.PhoneNumber"></label>
      <input asp-for="@Model!.PhoneNumber" />
    </div>
    <div class="form-control">
      <label asp-for="@Model!.Email"></label>
      <input asp-for="@Model!.Email" />
    </div>

    <button type="submit" class="btn">Spara</button>
  </form>
</section>