    </div>
    <span asp-validation-for="@Model!.DurationUnit" class="text-danger"></span>
    <div class="form-control">
      <label asp-for="@Model!.Category"></label>
      <input asp-for="@Model!.Category" />
    </div>
    <span asp-validation-for="@Model!.Category" class="text-danger"></span>
    <div class="form-control">
      <label asp-for="@Model!.TeacherId"></label>
      <input asp-for="@Model!.TeacherId" />
    </div>
    <span asp-validation-for="@Model!.TeacherId" class="text-danger"></span>
